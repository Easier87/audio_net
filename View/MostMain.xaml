<Page x:Class="audio_net.View.MostMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:audio_net.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MostMain">

    <Page.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Page.Resources>
    <Border Background="#1b1b1b">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>

            <ListView x:Name="SongsList" Background="#1b1b1b" Foreground="Black">
                
            </ListView>

            <Border Grid.Column="1" Background="#292929" BorderBrush="Black" BorderThickness="1">

            </Border>
        </Grid>
    </Border>
</Page>
